/*Custom styles.*/
/*主页文章添加阴影效果*/
.post {
  margin-top: 0px;
  margin-bottom: 60px;
  padding: 25px;
  -webkit-box-shadow: 0 0 5px rgba(202, 203, 203, .5);
  -moz-box-shadow: 0 0 5px rgba(202, 203, 204, .5);
}

/*左上角块颜色*/
.site-meta {
  background: #1199c4;
}

/*bilibili嵌入视频自适应*/
.aspect-ratio {
  position: relative;
  width: 100%;
  height: 0;
  padding-bottom: 75%;
}

.aspect-ratio iframe {
  position: absolute;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
}

.back-to-top,
.back-to-top-on {
  bottom: 50px;
}

.back-to-top {
  transform: scale(2);
}
